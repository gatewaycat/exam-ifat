\RequirePackage{pgfmath, probsoln}

%% DEFINE
%%   \fourMC{correctchoice}{choice}{choice}{choice}
%%   \fiveMC{correctchoice}{choice}{choice}{choice}
\newcommand\fourMC[4]{
\pgfmathtruncatemacro{\temp}{\answerkey[\number\value{question}]}
\ifnum\temp=1 \correctchoice #1 \choice #2 \choice #3 \choice #4 \else\fi
\ifnum\temp=2 \choice #2 \correctchoice #1 \choice #3 \choice #4 \else\fi
\ifnum\temp=3 \choice #2 \choice #3 \correctchoice #1 \choice #4 \else\fi
\ifnum\temp=4 \choice #2 \choice #3 \choice #4 \correctchoice #1 \else\fi
}
\newcommand\fiveMC[5]{
\pgfmathtruncatemacro{\temp}{\answerkey[\number\value{question}]}
\ifnum\temp=1 \correctchoice #1 \choice #2 \choice #3 \choice #4 \choice #5 \else\fi
\ifnum\temp=2 \choice #2 \correctchoice #1 \choice #3 \choice #4 \choice #5 \else\fi
\ifnum\temp=3 \choice #2 \choice #3 \correctchoice #1 \choice #4 \choice #5 \else\fi
\ifnum\temp=4 \choice #2 \choice #3 \choice #4 \correctchoice #1 \choice #5 \else\fi
\ifnum\temp=4 \choice #2 \choice #3 \choice #4 \choice #5 \correctchoice #1 \else\fi
}
